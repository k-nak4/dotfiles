# デフォルトエイリアスを削除
unalias -m \*

# 基本
alias c="clear"
alias ...="../.."
alias .....="../../.."
alias .......="../../../.."
alias .........="../../../../.."
alias less="less -IMx4 -X"
alias ls="ls -hF"
alias ll="ls -l"
alias la="ls -a"
alias mv="mv -i"
alias rm="rm -i"
alias src="source ${ZDOTDIR}/.zshrc"

# sudoを使用した時にもコマンドのシンタックスハイライトを有効にする
alias sudo="sudo "

# 便利
alias list_group="cut -d: -f1 /etc/group"
alias group_list="cut -d: -f1 /etc/group"
alias list_user="cut -d: -f1 /etc/passwd"
alias user_list="cut -d: -f1 /etc/passwd"

# Arch
alias audio_setting="pavucontrol"
alias img_view="feh -g 640x480 -d -S filename"

# Keyboard 無効化 (macOS Sierra)
alias macos_keyboard_disable='sudo kextunload /System/Library/Extensions/AppleUSBTopCase.kext/Contents/PlugIns/AppleUSBTCKeyboard.kext/'
alias macos_keyboard_enable='sudo kextload /System/Library/Extensions/AppleUSBTopCase.kext/Contents/PlugIns/AppleUSBTCKeyboard.kext/'

# 競技プログラミング用
alias gpp='g++ -std="c++14"'
